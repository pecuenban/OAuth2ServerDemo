{% extends 'base.html.twig' %}
{% block title %}Log in{% endblock %}
{% block body %}
<div class="contenedor">
<div class="fondo"></div>
<div class="cuadroTexto">

            <div class="cabecera">
                <div class="w3-container w3-center">
                    <img src="https://genotipia.test-quasardynamics.company/assets/Icons/Sidebar/logoDesplegado.svg" alt="Geb Test">
                </div>
            </div>
<form action="{{ path('app_login') }}" method="post" class="w3-container">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    {% if error %}
        {% if error.messageKey == 'Invalid credentials.' %}
            <p class="w3-error">&#x26D4;&#xFE0F; Invalid email address or password.<br>Please check your details and try again.</p>
        {% else %}
            <p class="w3-error">&#x26D4;&#xFE0F; {{ error.messageKey|trans(error.messageData, 'security') }}</p>
        {% endif %}
    {% endif %}
    <p>
        <label class="w3-text-theme" for="username">Email address</label>
        <input class="w3-input w3-border w3-light-grey" tabindex="1" type="email" required id="username" name="_username" value="{{ last_username }}">
    </p>
    <p>
        <label class="w3-text-theme" for="password">Password</label>
        <input class="w3-input w3-border w3-light-grey" tabindex="2" type="password" required id="password" name="_password">
        <a href="#" class="w3-text-blue w3-hover-text-blue-gray" tabindex="5">Forgot your password?</a>
    </p>
    <p>
        <button class="w3-button w3-black w3-block w3-ripple w3-hover-dark-gray" tabindex="3" type="submit">Login</button>
    </p>
    <p class="w3-center">Need an account? <a href="#" class="w3-text-blue w3-hover-text-blue-gray" tabindex="4">Sign up</a></p>
</form>
</div>
</div>
{% endblock %}
